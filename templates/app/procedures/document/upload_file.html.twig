{% extends 'base.html.twig' %}

{% block title %}Загрузка файла{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': procedure.id}) }}">Процедура №{{ procedure.id_number }}</a></li>
        <li class="breadcrumb-item active">Загрузка документа  - {{ fileTypeProcedure(fileType) }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Загрузка документа</div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="form-group">
                        {{ form_widget(form.fileTitle, {'attr': {'filecontent':'', 'placeholder': 'Наименование'}}) }}
                        {{ form_errors(form.fileTitle) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.file, {'attr': {'filecontent':'', 'placeholder': 'Выберите документ'}}) }}
                        {{ form_errors(form.file) }}
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary btn" type="submit">Загрузить</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

