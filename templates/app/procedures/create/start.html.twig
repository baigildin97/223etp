{% extends 'base.html.twig' %}

{% block title %}Создание процедуры{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item active">Новая процедура</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-sm-12">
                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header">Шаг 1. Выберите форму проведения процедуры</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">{{ form.procedureType.vars.label }}</label>
                            {{ form_widget(form.procedureType) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-secondary btn" type="submit">Продолжить</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}