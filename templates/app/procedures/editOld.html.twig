{% extends 'base.html.twig' %}

{% block title %}Редактирование{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedures') }}">Процедуры</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': procedure.id }) }}">Процедура №{{ procedure.id_number}}</a></li>
        <li class="breadcrumb-item active">Редактирование</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
    <div class="row justify-content-center">
        <div class="col-md-12">

            <div class="card">
                <div class="card-header">Редактирование</div>
                {{ form_start(form) }}
                <div class="card-header text-center"><h4>Общее сведения о проведения торгов</h4></div>
                <div class="card-body">
                    <fieldset class="form-group">
                        <label>Тип аукциона</label>
                        <div class="input-group">
                            {{ form_widget(form.procedureType, {'attr': {'class':'form-control', 'disabled':'disabled'}}) }}
                            {{ form_errors(form.procedureType) }}
                        </div>
                    </fieldset>

                    <fieldset class="form-group">
                        <label>Форма представления предложенной цене</label>
                        <div class="input-group">
                            {{ form_widget(form.pricePresentationForm, {'attr': {'class':'form-control', 'disabled':'disabled'}}) }}
                            {{ form_errors(form.pricePresentationForm) }}
                        </div>
                    </fieldset>

                    <fieldset class="form-group">
                        <label>Наименование процедуры</label>
                        <div class="input-group">

                            {{ form_widget(form.procedureName, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.procedureName) }}
                        </div>
                    </fieldset>

                    <div class="card-header text-center"><h4>Сведения о торгах</h4></div>


                    <fieldset class="form-group">
                        <label>Место представления заявок</label>
                        <div class="input-group">
                            {{ form_widget(form.infoPointEntry) }}
                            {{ form_errors(form.infoPointEntry) }}
                        </div>
                    </fieldset>

                    <fieldset class="form-group">
                        <label>Место проведения торгов</label>
                        <div class="input-group">
                            {{ form_widget(form.infoTradingVenue) }}
                            {{ form_errors(form.infoTradingVenue) }}
                        </div>
                    </fieldset>

                    <fieldset class="form-group">
                        <label>Участие в торгах и порядок их проведения</label>
                        <div class="input-group">
                            {{ form_widget(form.infoBiddingProcess) }}
                            {{ form_errors(form.infoBiddingProcess) }}
                        </div>
                    </fieldset>



                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-success" type="submit">Сохранить</button>
                </div>
                {{ form_end(form) }}
            </div>

        </div>

    </div>
{% endblock %}