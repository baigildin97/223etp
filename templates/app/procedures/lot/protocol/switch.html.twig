{% extends 'base.html.twig' %}

{% block title %}Генерация нового протокола{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedures') }}">Процедуры</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': procedure.id}) }}">Процедура №{{ procedure.id_number}}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('lot.protocols', {'lot_id': lot.id}) }}">Протоколы</a></li>
        <li class="breadcrumb-item active">Создание протокола</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header">Выберите тип протокола</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">{{ form_widget(form.protocolType, {'attr': {'class':'form-control'}}) }}</label>
                            {{ form_errors(form.protocolType) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-secondary btn" type="submit">Продолжить</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}