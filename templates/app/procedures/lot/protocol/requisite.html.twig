{% extends 'base.html.twig' %}

{% block title %}Выберите реквизиты{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedures') }}">Процедуры</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': procedure_id}) }}">Процедура
                №{{ procedure.id_number }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('lot.protocols', {'lot_id':lot.id}) }}">Протоколы</a></li>
        <li class="breadcrumb-item"><a href="{{ path('lot.protocol.create', {'lot_id':lot.id}) }}">Создание
                протокола</a></li>
        <li class="breadcrumb-item active">Выберите реквизиты</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in" style="display: none">
    <div class="row justify-content-center">
        <div id="printableArea" class="col-sm-12">

            {{ form_start(form, {'action': path('lot.protocol.sign', {
                'lot_id': lot.id,
                'protocol_type': type,
                'organizer_comment': 'false'}),
                'attr': {'id': 'save'}
            }) }}
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <label for="name">Выберите реквизиты</label>
                        {{ form_widget(form.requisite) }}
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-secondary btn" type="submit">Продолжить</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <script>
        document.getElementById("save").submit();
    </script>
{% endblock %}