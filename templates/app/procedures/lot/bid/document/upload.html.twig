{% extends 'base.html.twig' %}

{% block title %}Загрузка файла{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': bid.procedure_id}) }}">Процедура №{{ bid.procedure_number }}</a></li>
{#        <li class="breadcrumb-item"><a href="{{ path('lot.show', {'lotId': bid.lot_id}) }}">Лот №{{ bid.lot_number }}</a></li>#}
        <li class="breadcrumb-item"><a href="{{ path('bid.show', {'bidId': bid.id}) }}">Заявка №{{ bid.number }}</a></li>
        <li class="breadcrumb-item active">Загрузка доумента</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">Загрузка доумента</div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="form-group">
                        {{ form_widget(form.fileTitle, {'attr': {'filecontent':'', 'placeholder': 'Наименование'}}) }}
                        {{ form_errors(form.fileTitle) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.file, {'attr': {'filecontent':'', 'placeholder': 'Выберите документ'}}) }}
                        {{ form_errors(form.file) }}
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary btn" type="submit">Загрузить</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

