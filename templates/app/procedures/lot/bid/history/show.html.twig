{% extends 'base.html.twig' %}
{% block title %}Просмотр истории{% endblock %}
{% block breadcrumbs %}
   <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedures') }}">Мои процедуры</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': bid_original.procedure_id}) }}">Процедура №{{ bid_original.procedure_number }}</a></li>
{#        <li class="breadcrumb-item"><a href="{{ path('lot.show', {'lotId': bid_original.lot_id}) }}">Лот №{{ bid_original.lot_number}}</a></li>#}
        <li class="breadcrumb-item"><a href="{{ path('bid.show', {'bidId': bid_original.id}) }}">Заявка №{{ bid_original.number }}</a></li>
       <li class="breadcrumb-item"><a href="{{ path('bid.history', {'bidId': bid_original.id}) }}">История изменений</a></li>
        <li class="breadcrumb-item active">Просмотр истории</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header p-2"><span style="font-size: 16px; font-weight: 600">Заявка на участие в электронных торгах</span>
                    {% if (profileAccess.isAdmin() or profileAccess.isModerator()) %}
                        <div class="card-header-actions">
                            <a class="card-header-action" href="{{ path("moderate.bid.history.download", {'bid_id': bid_original.id, 'history_id' :history_id}) }}">
                             Скачать подписанный документ
                            </a>
                        </div>
                    {% endif %}

                </div>
                <div class="card-body">
                    <p><strong>1</strong>
                        {{ bid.firstPoint }}
                    </p>
                    <p><strong>2</strong> {{ bid.secondPoint }}</p>
                    <p><strong>3</strong> {{ bid.thirdPoint }}</p>
                    <p><strong>4</strong> {{ bid.fourthPoint | raw }}</p>
                    <p><strong>5</strong> {{ bid.fifthPoint | raw}}</p>
                    <p><strong>6</strong> {{ bid.sixthPoint | raw }}</p>
{#                    {% if bid.status == 'STATUS_REJECT' %}#}
{#                        <p>#}
{#                            <strong>Причина отклонения</strong>#}
{#                            <span class="text-danger">{{ bid.causeReject }}</span>#}
{#                        </p>#}
{#                    {% endif %}#}
                </div>
            </div>


        </div>
    </div>
{% endblock %}
