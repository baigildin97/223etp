{% extends 'base.html.twig' %}

{% block title %}Решение{% endblock %}
{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedures') }}">Процедуры</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': procedure.id }) }}">Процедура №{{ procedure.id_number}}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.notifications', {'procedure_id': procedure.id}) }}">Извещения</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.notification.show', {'procedure_id': procedure.id, 'notification_id':notification.id}) }}">{{ procedureXmlDocumentType(notification.type) }}№{{ notification.number }}</a></li>
        <li class="breadcrumb-item">Решение</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Решение</div>
                {{ form_start(form) }}
                <div class="card-body">
                    <fieldset class="form-group">
                        <label>Комментарий модератора:</label>
                        <div class="input-group">
                            {{ form_widget(form.cause, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.cause) }}
                        </div>
                    </fieldset>
                </div>
                <div class="card-footer">
                    {{ form_widget(form.approved, {'label': 'Одобрить извещение', 'attr': {'class': 'btn btn-success btn-sm'}}) }}

                    {{ form_widget(form.reject, {'label': 'Отклонить извещение', 'attr': {'class': 'btn btn-danger btn-sm'}}) }}
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}