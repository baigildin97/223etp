{% extends 'auth.html.twig' %}



{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div id="ui-view">
            <div class="fade-in">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <img class="login-logo" src="{{ asset('assets/brand/logo_black.png') }}" alt="">
                        <div class="card mx-4">
                            <div class="card-body p-4">
                                {% include '_flashes.html.twig' %}
                                <h1>Смена ЭЦП</h1>
                                <a class="btn btn-link px-0" href="{{ path('auth.sign.up') }}">Зарегистрироваться</a>
                                <div class="card">
                                    <div class="card-header">Выберите сертификат ЭП</div>
                                    <div class="card-body">
                                        <div class="list-group cert-list"></div>
                                    </div>
                                </div>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Заменить</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('sign_login_form') }}
{% endblock %}



