{% extends 'base.html.twig' %}

{% block title %}Добавление нового тарифы{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('tariffs') }}">Тарифы</a></li>
        <li class="breadcrumb-item active">Добавление тарифа</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">Добавление тарифа</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Наименование</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.title, {'attr': {'placeholder': 'Наименование', 'class':'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Стоимость</label>
                            <div class="input-group">
                                {{ form_widget(form.cost, {'attr': {'placeholder': 'Стоимость', 'class':'form-control'}}) }}
                                {{ form_errors(form.cost) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Период (месяцы)</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.period, {'attr': {'placeholder': 'Период', 'class':'form-control'}}) }}
                                {{ form_errors(form.period) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Статус</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.status, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.status) }}
                            </div>
                        </fieldset>



                        <fieldset class="form-group">
                            <label>Стандартный процент снятия</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.defaultPercent, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.defaultPercent) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Сохранить</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}