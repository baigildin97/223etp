{% extends 'base.html.twig' %}

  {% form_theme form _self %}
    {% block form_errors %}
        {% for error in errors %}
            <em style="display: block" class="error invalid-feedback">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</em>
        {% endfor %}
    {% endblock %}
{% block title %}
Изменение Email
{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('profile', {'profile_id': profile.id}) }}">{{ profile.certificate_owner }}</a></li>
        <li class="breadcrumb-item active">Изменение Email</li>
    </ol>
{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">Изменение Email</div>
                {{ form_start(form) }}

                <div class="card-body">
                        <fieldset class="form-group">
                            <label>Новый Email</label>
                            <div class="input-group">
                                <span class="input-group-prepend">
                                    <span class="input-group-text">
                                        <svg class="c-icon">
                                            <use xlink:href="/assets/svg/free.svg#cil-envelope-closed"></use>
                                        </svg>
                                    </span>
                                </span>
                                {{ form_widget(form.email, {'attr': {'placeholder': 'Email', 'class':'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </fieldset>
                </div>

                <div class="card-footer">
                    <button class="btn btn-sm btn-primary" type="submit">Сменить</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
