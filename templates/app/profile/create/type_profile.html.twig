{% extends 'base.html.twig' %}

{% block title %}Профиль{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('profile.create') }}">Шаг 1</a></li>
        <li class="breadcrumb-item"><a href="{{ path(app.request.attributes.get('_route')) }}">Шаг 2</a></li>
        <li class="breadcrumb-item">Шаг 3</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-sm-12">
                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header">Шаг 2. Выберите один из пунктов</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Выберите тип пользователя</label>
                            {{ form_widget(form.formOfIncorporation) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-secondary btn" type="submit">Продолжить</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}