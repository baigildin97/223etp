{% extends 'base.html.twig' %}

{% block title %}Создание профиля{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('profile.create') }}">Шаг 1</a></li>
        <li class="breadcrumb-item">Шаг 2</li>
        <li class="breadcrumb-item">Шаг 3</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
    <div class="row justify-content-center">
    <div class="col-sm-12">
        {{ form_start(form) }}
        <div class="card">
        <div class="card-header">Шаг 1. Выберите роль пользователя на ЭТП</div>
        <div class="card-body">
            <div class="form-group">
                <label for="name">{{ form.typeProfile.vars.label }}</label>
                {{ form_widget(form.typeProfile) }}
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-secondary btn" type="submit">Продолжить</button>
        </div>
    </div>
        {{ form_end(form) }}
    </div>
    </div>
    </div>
{% endblock %}