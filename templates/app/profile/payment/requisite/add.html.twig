{% extends 'base.html.twig' %}

{% block title %}Добавление реквизитов{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('payment.requisites', {'payment_id':payment.id}) }}">Банковские реквизиты</a></li>
        <li class="breadcrumb-item active">Добавление реквизитов</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">Добавление реквизитов</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Наименование банка</label>
                            <div class="input-group">
                                <span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.bankName, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.bankName) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Бик банка</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.bankBik, {'attr': {'class':'form-control', 'placeholder': '000000000'}}) }}
                                {{ form_errors(form.bankBik) }}
                            </div>
                        </fieldset>

                        <fieldset class="form-group">
                            <label>Лицевой счёт</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.personalAccount, {'attr': {'class':'form-control', 'placeholder': ''}}) }}
                                {{ form_errors(form.personalAccount) }}
                            </div>
                        </fieldset>

                        <fieldset class="form-group">
                            <label>Расчётный счёт</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.paymentAccount, {'attr': {'class':'form-control', 'placeholder': '00000000000000000000'}}) }}
                                {{ form_errors(form.paymentAccount) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Корреспондентский счет</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.correspondentAccount, {'attr': {'class':'form-control', 'placeholder': '00000000000000000000'}}) }}
                                {{ form_errors(form.correspondentAccount) }}
                            </div>
                        </fieldset>

                        <fieldset class="form-group">
                            <label>Адрес банка</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.bankAddress, {'attr': {'class':'form-control', 'placeholder': 'г. Уфа ул. Ленина д. 12'}}) }}
                                {{ form_errors(form.bankAddress) }}
                            </div>
                        </fieldset>

                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Сохранить</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('input_masks') }}
{% endblock %}
