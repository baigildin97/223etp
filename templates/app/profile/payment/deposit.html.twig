{% extends 'base.html.twig' %}

{% block title %}Пополнение лицевого счета{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('payments', {'profile_id': payment.profile_id}) }}">Счета и транзакции</a></li>
        <li class="breadcrumb-item"><a href="{{ path('payment.show', {'payment_id':payment.id}) }}">Счет: {{ payment.invoice_number }}</a></li>
        <li class="breadcrumb-item active">Пополнение лицевого счета</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">Пополнение лицевого счета</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Выберите банковский реквизит</label>
                            <div class="input-group">
                                {{ form_widget(form.requisiteId, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.requisiteId) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Введите сумму пополнения</label>
                            <div class="input-group">
                                {{ form_widget(form.money, {'attr': {'placeholder': 'Введите сумму', 'class':'form-control'}}) }}
                                {{ form_errors(form.money) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Сформировать документ</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}