{% extends 'base.html.twig' %}

{% block title %}Изменения сертификата профиля{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('profile', {'profile_id': profile.id}) }}">{{ profile.certificate_owner }}</a></li>
        <li class="breadcrumb-item">Изменения сертификата профиля</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Сертификат организации
                    </div>
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Выберите сертификат</label>
                            <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <svg class="c-icon"><use
                                                        xlink:href="/assets/svg/free.svg#cil-contact"></use></svg>
                                        </span>
                                    </span>
                                {{ form_widget(form.certificate, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.certificate) }}
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="card">
                    <div class="card-footer">
                        <button class="btn btn-sm btn-primary" type="submit">Заменить</button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}