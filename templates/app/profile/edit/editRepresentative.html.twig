{% extends 'base.html.twig' %}

{% block title %}Изменение данных представителя{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    Изменение данных представителя
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <fieldset class="form-group">
                        <label>Должность</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
    <svg class="c-icon">
    <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
    </svg></span></span>
                            {{ form_widget(form.position, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.position) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Тип подтверждающего документа</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
        <svg class="c-icon">
        <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
        </svg></span></span>
                            {{ form_widget(form.confirmingDocument, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.confirmingDocument) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Контактный телефон</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
            <svg class="c-icon">
            <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
            </svg></span></span>
                            {{ form_widget(form.phone, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Email</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                </svg></span></span>
                            {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Серия паспорта</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                </svg></span></span>
                            {{ form_widget(form.passportSeries, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.passportSeries) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Номер паспорта</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                </svg></span></span>
                            {{ form_widget(form.passportNumber, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.passportNumber) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Кем выдан</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                </svg></span></span>
                            {{ form_widget(form.passportIssuer, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.passportIssuer) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Код подразделения</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                </svg></span></span>
                            {{ form_widget(form.unitCode, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.unitCode) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Гражданство</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                </svg></span></span>
                            {{ form_widget(form.citizenship, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.citizenship) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Дата выдачи</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-calendar"></use>
                </svg></span></span>
                            {{ form_widget(form.passportIssuanceDate) }}
                            {{ form_errors(form.passportIssuanceDate) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Дата рождения</label>
                        <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
                <svg class="c-icon">
                <use xlink:href="/assets/svg/free.svg#cil-calendar"></use>
                </svg></span></span>
                            {{ form_widget(form.birthDate) }}
                            {{ form_errors(form.birthDate) }}
                        </div>
                    </fieldset>
                    <button class="btn btn-sm btn-primary" type="submit">Подтвердить изменения</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}