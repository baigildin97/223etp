{% extends 'base.html.twig' %}

{% block title %}Добавление нового сертификата ЭП{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('profile') }}">Профиль</a></li>
        <li class="breadcrumb-item"><a href="{{ path('profile.commissions', {'profile_id':profile_id}) }}">Реестр комисий</a></li>
        <li class="breadcrumb-item"><a href="{{ path('profile.commission.show', {'profile_id':profile_id, 'commission_id': commission.id}) }}">{{ commission.title }}</a></li>
        <li class="breadcrumb-item active">Добавление члена комиссии</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-md-10">

                <div class="card">
                    <div class="card-header">Добавление члена комиссии</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Фамилия</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.lastName, {'attr': {'placeholder': '', 'class':'form-control'}}) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Имя</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.firstName, {'attr': {'placeholder': '', 'class':'form-control'}}) }}
                                {{ form_errors(form.firstName) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Отчество</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.middleName, {'attr': {'placeholder': '', 'class':'form-control'}}) }}
                                {{ form_errors(form.middleName) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Должность</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.position, {'attr': {'placeholder': '', 'class':'form-control'}}) }}
                                {{ form_errors(form.position) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Роль</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.role, {'attr': {'placeholder': '', 'class':'form-control'}}) }}
                                {{ form_errors(form.role) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Статус</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.status, {'attr': {'placeholder': '', 'class':'form-control'}}) }}
                                {{ form_errors(form.status) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Добавить</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}