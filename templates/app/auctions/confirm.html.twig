{% extends 'base.html.twig' %}

{% block title %}Подтверждения участия в аукционе{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('procedures') }}">Процедуры</a></li>
        <li class="breadcrumb-item"><a href="{{ path('procedure.show', {'procedureId': bid.procedure_id }) }}">Процедура №{{ bid.procedure_number }}</a></li>
        <li class="breadcrumb-item active">Подтверждения участия в аукционе</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <p>{{ xml.owner }}</p>
                    <p>{{ xml.statement }}</p>
                    <p>{{ date(xml.createdAt) }}</p>
                </div>
                {{ form_start(form) }}
                {{ form_widget(form.sign) }}
                {{ form_errors(form.sign) }}
                <div class="card-footer">
                    <button id="sign_auction_participant" class="btn btn-sm btn-success btn-ladda ladda-button" data-hash="{{hash}}" data-thumbprint="{{ bid.certificate_thumbprint }}" type="submit">Подписать и подтвердить  <span class="ladda-spinner"></span></button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('sign_auction_participant') }}
    {% endblock %}