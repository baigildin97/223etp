{% extends 'base.html.twig' %}

{% block title %}Добавление{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('settings') }}">Настройки</a></li>
        <li class="breadcrumb-item"><a href="{{ path('roles') }}">Роли</a></li>
        <li class="breadcrumb-item active">Добавление</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-md-10">

                <div class="card">
                    <div class="card-header">Добавление</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <div class="form-group">
                            <label>Название</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.name, {'attr': {'placeholder': 'Название', 'class':'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Константа</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.roleConstant, {'attr': {'placeholder': 'ROLE_', 'class':'form-control'}}) }}
                                {{ form_errors(form.roleConstant) }}
                            </div>
                        </div>
                      <div class="form-group">
                          <label>Разрешения</label>
                          <div class="input-group">
                              {{ form_widget(form.permissions) }}
                              {{ form_errors(form.permissions) }}
                          </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Добавить</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}