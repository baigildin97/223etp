{% extends 'base.html.twig' %}
{% trans_default_domain 'admin' %}
{% block title %}Редактирование параметра: {{ setting.key | trans }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('settings') }}">Настройки</a></li>
        <li class="breadcrumb-item active">Редактирование параметра: {{ setting.key | trans }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">Редактирование параметра: {{ setting.key | trans }}</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Значение</label>
                            <div class="input-group">
                                <span class="input-group-prepend"><span class="input-group-text">
                                <svg class="c-icon">
                                <use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
                                </svg></span></span>
                                {{ form_widget(form.value, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.value) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Сохранить</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}