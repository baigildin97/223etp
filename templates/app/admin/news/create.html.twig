{% extends 'base.html.twig' %}

{% block title %}Добавление новостя{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin.news') }}">Новости</a></li>
        <li class="breadcrumb-item active">Добавление новостя</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="fade-in">
        <div class="row justify-content-center">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">Добавление новостя</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <fieldset class="form-group">
                            <label>Заголовок</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.subject, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.subject) }}
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Текст</label>
                                {{ form_widget(form.text) }}
                                {{ form_errors(form.text) }}
                        </fieldset>

                        <fieldset class="form-group">
                            <label>Отложеная публикация</label>
                            <div class="input-group"><span class="input-group-prepend"><span class="input-group-text">
<svg class="c-icon">
<use xlink:href="/assets/svg/free.svg#cil-pencil"></use>
</svg></span></span>
                                {{ form_widget(form.delayedPublication, {'attr': {'class':'form-control'}}) }}
                                {{ form_errors(form.delayedPublication) }}
                            </div>
                        </fieldset>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success" type="submit">Добавить</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('admin_main') }}
        {{ parent() }}
    {% endblock %}