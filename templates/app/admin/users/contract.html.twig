{% extends 'base.html.twig' %}

{% block title %}Подписание договора - {{ user.email }} {% endblock %}
{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin.users') }}">Все пользователи</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin.users.show', {'user_id': user.id}) }}">Пользователь
                - {{ user.email }}</a></li>
        <li class="breadcrumb-item active">Подписание договора - {{ user.email }}</li>
    </ol>

{% endblock %}

{% block body %}
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Общие сведения</div>
                {{ form_start(form) }}
                <div class="card-body">
                    <fieldset class="form-group">
                        <label>Перид подписание договора</label>
                        <div class="input-group">
                            {{ form_widget(form.period, {'attr': {'class':'form-control'}}) }}
                            {{ form_errors(form.period) }}
                        </div>
                    </fieldset>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-success" type="submit">Подписать</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('admin_main') }}
        {{ parent() }}
    {% endblock %}