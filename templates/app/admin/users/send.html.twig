{% extends 'base.html.twig' %}

{% block title %}Отправка сообщения пользователю - {{ user.email }} {% endblock %}
{% block breadcrumbs %}
    <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Панель управления</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin.users') }}">Все пользователи</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin.users.show', {'user_id': user.id}) }}">Пользователь
                - {{ user.email }}</a></li>
        <li class="breadcrumb-item active">Отправка сообщения пользователю - {{ user.email }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">Отправка сообщения</div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="form-group">
                        <div class="input-group">
                            {{ form_widget(form.message, {'attr': {'placeholder': 'Сообщение', 'class':'form-control'}}) }}
                            {{ form_errors(form.message) }}
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-success" type="submit">Отправить</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}