{% if status == 'STATUS_SIGNED' %}

    <span class="badge badge-success">Подписан</span>
{% elseif status == 'STATUS_NOT_SIGNED' %}
    <span class="badge badge-danger">Не подписан</span>
{% elseif status == 'STATUS_APPROVE' %}
    <span class="badge badge-success">Одобрен</span>
{% elseif status == 'STATUS_NOT_ACTIVE' %}
    <span class="badge badge-light">Не активный</span>
{% elseif status == 'STATUS_REJECTED' %}
    <span class="badge badge-warning">Отклонен</span>
{% elseif status == 'STATUS_RECALLED' %}
    <span class="badge badge-warning">Отозван</span>
{% endif %}